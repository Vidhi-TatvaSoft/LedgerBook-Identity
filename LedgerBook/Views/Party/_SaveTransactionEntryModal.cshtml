@using DataAccessLayer.ViewModels;
@using DataAccessLayer.Constant;
@model TransactionEntryViewModel;

<div class="modal-content">
    <div class="modal-header">
        @if (Model.TransactionId != 0)
        {
            <h5 class="modal-title" id="modal-header">Update Transaction</h5>
        }else{
            <h5 class="modal-title" id="modal-header">Add Transaction</h5>
        }
        <button type="button" class="btn-close userdetail-confirmation-modal-close" data-bs-dismiss="modal"
            aria-label="Close"></button>
    </div>
    <form id="save-transaction-entry-modal-form">
        <div class="modal-body row ">
            <input type="hidden" asp-for="@Model.TransactionId">
            <input type="hidden" asp-for="@Model.PartyId" id="party-id-hidden">
            <div class=" col-8 mt-3 pe-0">
                <div class="form-floating ">
                    <input type="Number" oninput="RemoveWhiteSpace(this)" asp-for="@Model.TransactionAmount"
                        value="@(Model.TransactionAmount == 0 ? "" : Model.TransactionAmount)" class="form-control"
                        id="transaction-amount" placeholder="Opening Amount">
                    <label for="transaction-amount" asp-for="@Model.TransactionAmount"
                        class="fs-6 text-secondary">Amount</label>
                    <span asp-validation-for="@Model.TransactionAmount" class="text-danger"></span>
                </div>
            </div>
            <div class=" col-4 mt-3 ps-0">
                <div class="form-floating">
                    <select id="transaction-transactionType" class="form-control" asp-for="@Model.TransactionTypeEnum">
                        <option value="@EnumHelper.TransactionType.GOT">You Got
                        </option>
                        <option value="@EnumHelper.TransactionType.GAVE">You Gave
                        </option>
                    </select>
                    <label for="transaction-transactionType">Type</label>
                </div>
            </div>
        </div>
        <div class="modal-footer d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" >Save</button>
            <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Close</button>
        </div>
    </form>

</div>


<partial name="_ValidationScriptsPartial" />
<partial name="_Toaster" />